@model Category

@{
    ViewData["Title"] = "Confirm Deletion";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center mb-4">Confirm Deletion</h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete this category?</h5>
                    <p><strong>Category Name:</strong> @Model.Name</p>
                    <p><strong>Image:</strong> @Model.Image</p>
                    <p><strong>ID:</strong> @Model.Id</p>
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
